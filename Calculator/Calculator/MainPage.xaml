<?xml version="1.0" encoding="utf-8" ?>
<ContentPage BackgroundColor="#0f0f0f"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.MainPage">

    <StackLayout>
        <Label Text="Hello! This is a calculator." HorizontalTextAlignment="Center" TextColor="White" FontSize="36" Padding="20, 10"/>

        <Button Text="Start!" CornerRadius="20" TextColor="White" FontSize="24" Padding="20, 10" 
            VerticalOptions="CenterAndExpand" Clicked="NavigateToCalculator">
            <Button.Background>
                <LinearGradientBrush EndPoint="1,0">
                    <GradientStop Color="Black"
                          Offset="0.1" />
                    <GradientStop Color="Orange"
                          Offset="1.0" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </StackLayout>

</ContentPage>
